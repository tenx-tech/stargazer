{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017"],
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "isolatedModules": false,
    "outDir": "build",
    "jsx": "preserve"
  },
  "include": ["src"]
}
